{
  "variables": {
    "hyperv_headless": "true",
    "hyperv_generation": "2",
    "hyperv_configuration_version": "9.0",
    "hyperv_memory": "8192",
    "hyperv_enable_dynamic_memory": "false",
    "hyperv_cpus": "4",
    "hyperv_enable_virtualization_extensions": "true",
    "hyperv_switch_name": "Default Switch",
    "hyperv_enable_mac_spoofing": "true",
    "hyperv_enable_secure_boot": "false",
    "hyperv_boot_wait": "5s",
    "hyperv_communicator": "ssh",
    "hyperv_ssh_username": "vagrant",
    "hyperv_ssh_password": "vagrant",
    "hyperv_ssh_port": "22",
    "hyperv_ssh_timeout": "15m",
    "hyperv_guest_additions_mode": "disable",
    "hyperv_shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
  }
}