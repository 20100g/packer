{
  "variables": {
    "home_directory": "{{env `USERPROFILE`}}",
    "amazon_region": "eu-west-1",
    "amazon_source_ami_filter_name": "",
    "amazon_instance_type": "t2.medium",
    "amazon_volume_size": "127",
    "amazon_user_data_file": "builders/amazon-ebs/userdata.ps1",
    "amazon_ssh_keypair_name": "packer",
    "amazon_communicator": "winrm",
    "amazon_winrm_username": "Administrator"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `amazon_region`}}",
      "source_ami_filter": {
        "filters": {
          "name": "{{user `amazon_source_ami_filter_name`}}"
        },
        "most_recent": true
      },
      "ami_name": "packer-{{user `author`}}-{{user `name`}}-{{user `version`}}-{{timestamp}}",
      "ami_description": "{{user `description`}}",
      "instance_type": "{{user `amazon_instance_type`}}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": "{{user `amazon_volume_size`}}",
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "Name": "packer-{{user `author`}}-{{user `name`}}-{{user `version`}}-{{timestamp}}"
      },
      "run_tags": {
        "Name": "packer-{{user `author`}}-{{user `name`}}-{{user `version`}}-{{timestamp}}"
      },
      "user_data_file": "{{user `amazon_user_data_file`}}",
      "ssh_keypair_name": "{{user `amazon_ssh_keypair_name`}}",
      "ssh_private_key_file": "{{user `home_directory`}}/.aws/{{user `amazon_ssh_keypair_name`}}.pem",
      "communicator": "{{user `amazon_communicator`}}",
      "winrm_username": "{{user `amazon_winrm_username`}}",
      "disable_stop_instance": true
    }
  ]
}
