  "provisioners": [
    {
      "type": "powershell",
      "script": "{{user `builder_source`}}/{{build_type}}/scripts/prepare.ps1"
    },
    {
      "type": "file",
      "source": "{{user `builder_source`}}/{{build_type}}/upload/",
      "destination": "{{user `builder_destination`}}"
    }
  ]
