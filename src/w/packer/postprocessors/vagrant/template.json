{
  "variables": {
    "vagrant_vagrantfile_template": "",
  },
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "{{user `artifacts_directory`}}/packer-{{user `author`}}-{{user `name`}}-{{user `version`}}-{{timestamp}}.box",
      "vagrantfile_template": "{{user `vagrant_vagrantfile_template`}}"
    }
  ]
}
