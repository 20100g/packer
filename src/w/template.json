{
  "description": "{{user `description`}}",
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "{{user `virtualbox_guest_os_type`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": "{{user `headless`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ],
      "disk_size": "{{user `disk_size`}}",
      "boot_wait": "{{user `boot_wait`}}",
      "guest_additions_mode": "{{user `guest_additions_mode`}}",
      "floppy_files": "{{user `floppy_files`}}",
      "communicator": "{{user `communicator`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "output_directory": "{{user `output_directory`}}"
    },
    {
      "type": "virtualbox-ovf",
      "source_path": "{{user `source_path`}}",
      "headless": "{{user `headless`}}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "guest_additions_mode": "{{user `guest_additions_mode`}}",
      "floppy_files": "{{user `floppy_files`}}",
      "communicator": "{{user `communicator`}}",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_timeout": "{{user `winrm_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "chef/cookbooks.tar.gz",
      "destination": "/tmp/chef/cookbooks.tar.gz"
    },
    {
      "type": "powershell",
      "script": "chef/cookbooks.ps1"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "{{user `chef_guest_os_type`}}",
      "skip_install": "{{user `chef_skip_install`}}",
      "remote_cookbook_paths": "{{user `remote_cookbook_paths`}}",
      "run_list": "{{user `run_list_boot`}}"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "{{user `chef_guest_os_type`}}",
      "skip_install": "{{user `chef_skip_install`}}",
      "remote_cookbook_paths": "{{user `remote_cookbook_paths`}}",
      "run_list": "{{user `run_list_provision`}}"
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "{{user `chef_guest_os_type`}}",
      "skip_install": "{{user `chef_skip_install`}}",
      "remote_cookbook_paths": "{{user `remote_cookbook_paths`}}",
      "run_list": "{{user `run_list_shutdown`}}"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "output": "{{user `output_directory`}}/{{.Provider}}.box",
      "vagrantfile_template": "{{user `vagrantfile_template`}}"
    }
  ]
}