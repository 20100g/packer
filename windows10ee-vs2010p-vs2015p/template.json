{
  "description": "Windows 10 Enterprise Evaluation with Visual Studio 2010 Professional and Visual Studio 2015 Professional",
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Windows10_64",
      "iso_url": "http://care.dlservice.microsoft.com/dl/download/2/5/4/254230E8-AEA5-43C5-94F6-88CE222A5846/14393.0.160715-1616.RS1_RELEASE_CLIENTENTERPRISEEVAL_OEMRET_X64FRE_EN-US.ISO",
      "iso_checksum_type": "sha1",
      "iso_checksum": "a86ae3d664553cd0ee9a6bcd83a5dbe92e3dc41a",
      "headless": true,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ],
      "disk_size": "31744",
      "boot_wait": "1m",
      "guest_additions_mode": "disable",
      "floppy_files": [
        "../windows/virtualbox-iso",
        "../windows10ee/virtualbox-iso",
        "chef/.berkshelf"
      ],
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "1h",
      "shutdown_command": "A:\\shutdown.bat"
    }
  ],
  "provisioners": [
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "skip_install": true,
      "remote_cookbook_paths": [
        "/tmp/chef/cookbooks"
      ],
      "run_list": [
        "recipe[packer_windows10ee_vs2010p_vs2015p::boot]"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "skip_install": true,
      "remote_cookbook_paths": [
        "/tmp/chef/cookbooks"
      ],
      "run_list": [
        "recipe[packer_windows10ee_vs2010p_vs2015p::install_prerequisites]"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "skip_install": true,
      "remote_cookbook_paths": [
        "/tmp/chef/cookbooks"
      ],
      "run_list": [
        "recipe[packer_windows10ee_vs2010p_vs2015p::install]"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "skip_install": true,
      "remote_cookbook_paths": [
        "/tmp/chef/cookbooks"
      ],
      "run_list": [
        "recipe[packer_windows10ee_vs2010p_vs2015p::install_sp1]"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "skip_install": true,
      "remote_cookbook_paths": [
        "/tmp/chef/cookbooks"
      ],
      "run_list": [
        "recipe[packer_windows10ee_vs2010p_vs2015p::install_2015]"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "skip_install": true,
      "remote_cookbook_paths": [
        "/tmp/chef/cookbooks"
      ],
      "run_list": [
        "recipe[packer_windows10ee_vs2010p_vs2015p::shutdown]"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "gusztavvargadr--windows10ee-vs2010p-vs2015p--0.3.0--{{.Provider}}.box",
      "vagrantfile_template": "../visual-studio/vagrant/Vagrantfile"
    }
  ]
}
