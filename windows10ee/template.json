{
  "description": "Windows 10 Enterprise Evaluation",
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "Windows10_64",
      "iso_url": "http://care.dlservice.microsoft.com/dl/download/2/5/4/254230E8-AEA5-43C5-94F6-88CE222A5846/14393.0.160715-1616.RS1_RELEASE_CLIENTENTERPRISEEVAL_OEMRET_X64FRE_EN-US.ISO",
      "iso_checksum_type": "sha1",
      "iso_checksum": "a86ae3d664553cd0ee9a6bcd83a5dbe92e3dc41a",
      "headless": true,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ],
      "disk_size": "31744",
      "boot_wait": "1m",
      "guest_additions_mode": "disable",
      "floppy_files": [
        "../windows/virtualbox-iso",
        "virtualbox-iso"
      ],
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "1h",
      "shutdown_command": "A:\\shutdown.bat"
    }
  ],
  "provisioners": [
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "skip_install": true,
      "cookbook_paths": [
        "chef/cookbooks",
        "../windows/chef/cookbooks"
      ],
      "run_list": [
        "recipe[packer_windows10ee::boot]"
      ]
    },
    {
      "type": "windows-restart"
    },
    {
      "type": "chef-solo",
      "guest_os_type": "windows",
      "skip_install": true,
      "cookbook_paths": [
        "chef/cookbooks",
        "../windows/chef/cookbooks"
      ],
      "run_list": [
        "recipe[packer_windows10ee::shutdown]"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "gusztavvargadr--windows10ee--0.1.2--{{.Provider}}.box",
      "vagrantfile_template": "../windows/vagrant/Vagrantfile"
    }
  ]
}
